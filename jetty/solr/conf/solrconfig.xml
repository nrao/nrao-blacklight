<?xml version="1.0" encoding="UTF-8" ?>
<config>
  <abortOnConfigurationError>${solr.abortOnConfigurationError:true}</abortOnConfigurationError>
  <dataDir>${solr.data.dir:./solr/data}</dataDir>

  <searchComponent name="collapse" class="org.apache.solr.handler.component.CollapseComponent" />

  <requestHandler name="standard" class="solr.SearchHandler" default="true">
    <lst name="defaults">
      <str name="q">*:*</str>
      <str name="echoParams">explicit</str>
    </lst>
  </requestHandler>

  <requestHandler name="dismax" class="solr.SearchHandler">
    <lst name="defaults">
      <str name="q.alt">*:*</str>
      <str name="defType">dismax</str>
      <str name="echoParams">explicit</str>
    </lst>
  </requestHandler>

  <requestHandler name="search" class="solr.SearchHandler">
    <lst name="defaults">
      <str name="q">*:*</str>
      <str name="echoParams">explicit</str>
      <str name="fl">id,session_id,projid,title,investigator_concise,date_display,score</str>
      <str name="facet">true</str>
      <str name="facet.mincount">1</str>
      <str name="facet.sort">false</str>
      <str name="collapse.field">collapse</str>
      <str name="collapse.facet">before</str>
      <str name="collapse.info.doc">true</str>
      <str name="collapse.info.count">true</str>
      <str name="collapse.includeCollapsedDocs.fl">scan,object,band,receiver,backend,obstype,ra,dec,skyfreq_concise</str>
      <!--
      -->
    </lst>

    <arr name="components">
      <str>collapse</str>
      <str>facet</str>
    </arr>
  </requestHandler>

  <requestHandler name="document" class="solr.SearchHandler">
    <lst name="defaults">
      <str name="echoParams">explicit</str>
      <str name="fl">*</str>
      <str name="rows">1</str>
      <str name="q">{!raw f=id v=$id}</str>
      <!-- use id=blah instead of q=id:blah -->
    </lst>
  </requestHandler>

  <!-- Only available in later field collapsing patches. -->
  <fieldCollapsing>
    <fieldCollapseCache
       class="solr.FastLRUCache"
       size="512"
       initialSize="512"
       autowarmCount="128"/>
  </fieldCollapsing>
  <!--
  -->

  <!-- CSV update handler, loaded on demand -->
  <requestHandler name="/update/csv" class="solr.CSVRequestHandler" startup="lazy" />

  <requestHandler name="/admin/" class="org.apache.solr.handler.admin.AdminHandlers" />
  
  <!-- ping/healthcheck -->
  <requestHandler name="/admin/ping" class="PingRequestHandler">
    <lst name="defaults">
      <str name="qt">standard</str>
      <str name="q">*:*</str>
      <str name="echoParams">all</str>
    </lst>
  </requestHandler>
    
  <!-- Echo the request contents back to the client -->
  <requestHandler name="/debug/dump" class="solr.DumpRequestHandler" >
    <lst name="defaults">
     <str name="echoParams">explicit</str> <!-- for all params (including the default etc) use: 'all' -->
     <str name="echoHandler">true</str>
    </lst>
  </requestHandler>

  <!-- config for the admin interface --> 
  <admin>
    <defaultQuery>*:*</defaultQuery>

    <!-- configure a healthcheck file for servers behind a loadbalancer
      <healthcheck type="file">server-enabled</healthcheck>
    -->
  </admin>
</config>
