<%# default partial to display solr document fields in catalog index view -%>
<dl class="defList">
  
  <% index_field_names.each do |solr_fname| -%>
    <% if document.get solr_fname %>
        <dt><%= h index_field_labels[solr_fname]%></dt>
        <% if solr_fname == "electronic_location" %>
            <dd><a href="<%= document[solr_fname] %>" target="_blank">Read this thesis.</a></dd>
        <% elsif solr_fname == "ads_bibcode" %>
            <dd><a href="http://adsabs.harvard.edu/abs/<%= document[solr_fname] %>" target="_blank"><%= document[solr_fname] %></a></dd>
        <% else %>
            <dd><%= document[solr_fname] %></dd>
        <% end -%>
    <% end -%>
  <% end -%>

</dl>
